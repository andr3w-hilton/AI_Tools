# Orb Arena - Multiplayer WebSocket Game
# Make sure the orb-arena container is running on ports 8080 (HTTP) and 8765 (WebSocket)
#
# Copy this file to game.subdomain.conf and replace YOUR_SERVER_IP with your server's IP address.

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name game.*;

    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    # Main game page (HTML, CSS, JS)
    location / {
        include /config/nginx/proxy.conf;
        include /config/nginx/resolver.conf;
        set $upstream_app YOUR_SERVER_IP;
        set $upstream_port 8080;
        set $upstream_proto http;
        proxy_pass $upstream_proto://$upstream_app:$upstream_port;
    }

    # WebSocket endpoint for real-time game state
    location /ws {
        include /config/nginx/resolver.conf;
        proxy_pass http://YOUR_SERVER_IP:8765;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_buffering off;
    }
}
